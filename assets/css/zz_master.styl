.btn span
	font-size 1.4em
	text-transform uppercase
	letter-spacing 5px

.btn-blue
	border-radius 0px 
	border 4px $blue2 solid !important
	span
		color $blue !important
	&:hover
		border 4px $blue solid !important

		
.btn-green
	border-radius 0px 
	border 4px $green2 solid !important
	span
		color $green !important
	&:hover
		border 4px $green solid !important

.bg--gray
	background $gray2

// ---- header

#menu1
	padding 0px
	.menu-horizontal
		top 0
		>li
			padding 25px
			margin 0
			&:not(.separate)::after
				padding 10px 0 0 0
			&:hover
				background $blue
				//color $white
				>span, >a
					color $white !important
	.dropdown__content
			padding 0 !important
			border-radius 0px !important
	.menu-vertical
		li
			padding 10px 25px
			margin 0
			&:not(.separate)::after
				padding 10px 0 0 0
			&:hover
				background $blue
				color $white
				>span, >a
					color $white !important
	.logo
		max-height 100% !important
		top 0
		bottom 0
		margin auto
		position absolute
	.megamenu
		.col-sm-12
			padding 0px !important
		div[class*='col-']
			padding 25px 10px
#menu2
	padding 0 25px
	.logo
		max-height 100% !important
		top 0
		bottom 0
		margin auto
		position absolute
		




// ---- Home page

#our-services
	.col-sm-3
