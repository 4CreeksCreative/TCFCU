@import 'zy_settings'

//normalize-css()
//base()

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
	font-family $futura
	color $gray
	text-transform uppercase
	margin-bottom 10px
	letter-spacing 15px
	font-weight 100

h1
	font-size 6em
h2 
	font-size 5em
h3
	font-size 4em
h4
	font-size 3em
h5
	font-size 2em
h6 
	font-size 1.5em
	letter-spacing 5px
	margin-bottom 10px !important


p, span
	font-family $openSans
	color $gray
	font-size 1em
input
	font-size 1em
::selection 
	background $navy /* WebKit/Blink Browsers */
	color #fff

::-moz-selection
	background: $navy /* Gecko Browsers */
	color #fff

  
.hr-green::after
	background-color $green
	height 5px
	content ""
	display block
	width 75%
	margin-top 15px
.hr-blue::after
	background-color $blue
	height 5px
	content ""
	display block
	width 75%
	margin-top 15px
.hr-green-before::before
	background-color $green
	height 5px
	content ""
	display block
	width 75%
	margin-bottom 15px
.hr-blue-before::before
	background-color $blue
	height 5px
	content ""
	display block
	width 75%
	margin-bottom 15px
.hr-white-before::before
	background-color $white
	height 5px
	content ""
	display block
	width 75%
	margin-bottom 15px
.hr-white-after::after
	background-color $white
	height 5px
	content ""
	display block
	width 75%
	margin-bottom 15px
.col-right-full-height
	position absolute
	right 0
	top 0
	height 100%
