@import 'zy_settings'

//normalize-css()
//base()

body
	padding-top 100px //for the sticky header

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
	font-family $futura
	color $gray
	//text-transform uppercase
	margin-bottom 10px !important
	letter-spacing 0px
	font-weight 400


h1
	font-size 9.5em
	text-transform uppercase
	letter-spacing 5px

h2
	font-size 5em
	letter-spacing -2px
	font-weight 500
h3
	font-size 4em
	font-weight	500
	line-height 1.2em
h4
	font-size 3em
h5
	font-size 2.5em
	font-weight 600
	line-height 1.0em
h5.footer
	font-size 1.8em
	font-weight 800

h6
	font-size 1.5em
	font-weight 800

p, span, input, select, textarea
	font-family $futura
	color $gray
	font-size 1.6em
	line-height 1.6em
p > span
	font-size 1em
p a,
span a,
label a
	cursor pointer
	color $green
input
	font-size 1em
a:hover
	text-decoration none !important
::selection
	background $blue /* WebKit/Blink Browsers */
	color $white

::-moz-selection
	background: $blue /* Gecko Browsers */
	color $white

*[class*='hr-'][class*='-after']::after, *[class*='hr-'][class*='-before']::before
	height 5px
	content ""
	display block
	width 75%
	margin 15px 0
[class*='hr-green']::after, [class*='hr-green']::before
	background-color $green
[class*='hr-blue']::after, [class*='hr-blue']::before
	background-color $blue
[class*='hr-white']::after, [class*='hr-white']::before
	background-color $white


.col-right-full-height
	position absolute
	right 0
	top 0
	height 100%


.megamenu-subhead
	padding-left 25px

// ---- Calculator
.calculator
	padding 25px
	.form, .results
		width 50%
		float left
		padding 0 15px
		@media (max-width:768px)
			width 100%
			float none
// ---- misc
#freshdesk-button
	cursor pointer
	transform rotate(-90deg)
	transform-origin bottom center
	position fixed
	z-index 2
	right -65px
	bottom 255px
	background $blue
	padding 5px 10px 20px 10px
	text-align center
	transition 0.2s
	p
		font-size 20px
		color $white
	&:hover
		right -55px
		transition 0.2s
	@media (max-width:992px)
		bottom 100px
		right -60px
		p
			font-size 16px
		&:hover
			right -50px
.boxed
	border-radius 0px
video
	max-width 100%
#hero.parallax
	.background-image-holder
		min-height 100%
		top 0
.bg-cc
	background-position center center
.parallax
	.background-image-holder
		top -50vh
		min-height 100vh
		background-position center center !important
		&.bg-cb
			background-position center bottom !important
		&.bg-ct
			background-position center top !important

@media (max-width:768px)
	[class*="height-"]
		height auto
		min-height 50vh
.freshwidget-button
	top: auto !important
	bottom: 200px !important
.freshwidget-theme
	box-shadow none !important
	border-radius 0px !important
section
	padding-top 50px
	padding-bottom 40px
section#pre-footer
	margin-top 50px
section#footer
	padding-top 100px
	@media (max-width: 767px)
		padding-top 0
	ul.social
		li
			display inline-block
			margin-right 15px
			a
				display block
				i
					transition 0.2s
					font-size 30px
					&:hover
						color $green
						transition 0.2s
	ul.sub-footer-nav
		li
			display inline-block
			padding 0 12px 0 7px
			&:first-child
				padding 0 12px 0 0
			&:not(:last-child)
				border-right 1px solid $blue

.btn
	border-radius 0px
	span
		font-size 1em !important
		text-transform uppercase
		letter-spacing 2px
		font-family $futura
		font-weight	600

	&.btn-blue
		border 4px $blue solid !important
		background $blue !important
		margin-top	25px
		margin-bottom 25px
		span
			color $white !important
		&:hover
			background $white !important
			border 4px $blue solid !important
			span
				color $blue !important

	&.btn-green
		border 4px $green solid !important
		background $green !important
		margin-top	25px
		margin-bottom	25px
		span
			color $white !important
		&:hover
			border 4px $green solid !important
			background $white !important
			span
				color $green !important
	&.btn-white
		background $transparent
		border 2px $white solid !important
		span
			color $white !important
		&:hover
			background $white
			border 2px $white solid !important
			span
				color $blue !important
[data-tooltip]
	border-bottom dotted 1px rgba(0,0,0,0.5)
[data-tooltip]:after
	background $blue
	padding 5px 10px
	max-width 80vw
	width 300px
