.pt--1
	padding-top 1.85714286em
.pt--2
	padding-top 3.71428571em
.pt--3
	padding-top 5.57142857em
.pb--1
	padding-bottom 1.85714286em
.pb--2
	padding-bottom 3.71428571em
.pb--3
	padding-bottom 5.57142857em

.col-center
	float none
	margin 0 auto

// ---- Colors

.bg--gray
	background $gray4
.bg--blue
	background $blue
.bg--green
	background $green
.color--white
	color $white
.color--blue
	color $blue
.color--green
	color $green
a
	transition 0.2s
	color $blue
	&:hover,&:active
		transition 0.2s
		color $blueHover
.overlay-green[data-overlay]:before
	background $green
.overlay-blue[data-overlay]:before
	background $blue
// ---- header
#home-header-text
	@media (max-width:1300px)
		font-size 65px
	@media (max-width:992px)
		font-size 60px
	@media (max-width: 767px)
		font-size 45px
#menu2
	position fixed
	top 0
	left 0
	background $white
	z-index 99
	padding 0 0 0 50px
	width 100%
	height 100px
	box-shadow 0px 0px 5px rgba(0,0,0,0.5)
	.logo
		max-height 75% !important
		top 0
		bottom 0
		margin auto
		position absolute

#menu1
	font-family	$futura
	text-transform	none
	padding 0px
	.menu-horizontal
		top 0
		>li
			display initial
			float left
			margin 0
			@media (max-width:767px)
				display block
				float none
			>span, >a
				line-height 100px
				padding 0px 35px
				display block
				text-transform	none
				color #58595b
				font-size	1.4em
				transition 0.2s
			&:not(.separate)::after
				padding 10px 0 0 0
			&:hover
				background $blue
				transition 0.2s
				//color $white
				>span, >a
					color $white !important
	.dropdown__trigger::after
		display none
	.dropdown__content
			padding 0 !important
			border-radius 0px !important
	.menu-vertical
		padding-left 25px
		li

			a
				font-size	1.3em
				display block
				padding 5px 0px
				margin 0
				&.color--white
					color $white
				&:not(.separate)::after
					padding 10px 0 0 0
				&:hover
					//background $blue
					color $blue
					>span, >a
						color $white !important
	.logo
		max-height 75% !important
		top 0
		bottom 0
		margin auto
		position absolute
	.megamenu
		.col-sm-12
			padding 0px !important
		div[class*='col-']
			padding 25px 10px

.menu-horizontal > li, .menu-vertical > li
	font-family $futura


.container.header
	width 100%


// ---- Home page

#our-services
	.col-sm-3
		padding 0 5% 25px 5%
		img
			padding 0 35px

section#home-landing
	padding-top 100px

section#our-services
	padding-top 150px
	padding-bottom 150px

section#map
	padding-bottom 0px

// ---- Tables

table
	border $blue 4px solid
	font-size 1.2em
	text-align left
	thead
		tr
			th
				text-align left
				background-color $blue
				color $white
	tbody
		tr:nth-child(even)
			background-color rgba(0,0,0,.04) !important



// ---- Loans
#loan-nav
	.loan-type
		overflow hidden
		.background-image-holder
			transition 0.5s ease-in-out
		&:hover
			.background-image-holder
				transition 0.5s ease-in-out
				transform scale(1.1)


// ---- Masonry
.masonry
	.masonry__item
		margin-bottom 0



// ---- Partials
#home-login
	//background #57818A
	padding 20px 0 30px 0
	position absolute
	bottom 0
	z-index 10
	width 100%
	h1, h2, h3, h4, h5, h6
		margin 0
		color $white


#blog-slider
	.slide-image
		height 300px !important
	li
		list-style-type none



// ---- Home page
#home-hero, #hero-cover
	//min-height 80vh
.hamburger-toggle > i
	color $blue
	//line-height 100px

#icon-nav
	i
		margin 20px auto
		color $navy
		font-size 3em
	.btn
		max-width 200px
		margin 0 auto

// ---- media queries





@media (max-width: 992px) //tablet or small desktop
	h1
		font-size 7.5em
	h2
		font-size 4.5em
	h3
		font-size 3.5em
	h4
		font-size 2.5em
	h5
		font-size 2em
	h6
		font-size 1.5em

@media (max-width:767px) //mobile
	body
		padding-top 60px
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
		//letter-spacing 5px
	h1
		font-size 4em
	h2
		font-size 3.5em
	h3
		font-size 3em
	h4
		font-size 2.5em
	h5
		font-size 2em
	h6
		font-size 1.5em
	.inline-block-xs
		width 49%
		display inline-block
		float none
	.col-right-full-height
		margin-top 30px
		position relative
		height 500px
	div[class*='col-'] > div[class*='col-']
		padding 0
	#footer
		.logo
			margin-top 50px
	#menu2
		padding 0px 25px
		height 60px

	#menu1
		overflow-y auto
		background $white
		max-height 90vh
		.megamenu-subhead
			padding 0
		[class*='hr-']:after, [class*='hr-']:before
			width 100%
		.menu-horizontal
			>li
				margin 0
				&:hover
					background unset
					//color $white
					>span, >a
						color $gray !important
		.dropdown__content
				padding 0 !important
				border-radius 0px !important
		.menu-vertical
			padding 0px
			li
				padding 10px 25px
				margin 0
				&:not(.separate)::after
					padding 10px 0 0 0
				&:hover
					background unset
					color $gray
					>span, >a
						color $gray !important
@media (max-height: 900px) //for smaller laptops
	@media (min-width: 992px)
		h1
			font-size 7.5em
		h2
			font-size 4.5em
		h3
			font-size 3.5em
		h4
			font-size 2.5em
		h5
			font-size 2em
		h6
			font-size 1.5em
	#home-hero, #hero-cover
		//min-height 100vh
@media (max-height: 730px)
	#hero-cover
		padding 9em 0 1em 0
