@import 'zy_settings'

//normalize-css()
//base()

h1, h2, h3, h4, h5, h6, span, .h1, .h2, .h3, .h4, .h5, .h6
	font-family $garamond
	color #404040

p
	font-family $openSans
	color #404040
	font-size 0.8em

::selection 
	background #57818a /* WebKit/Blink Browsers */
	color #fff

::-moz-selection
	background: #57818a /* Gecko Browsers */
	color #fff

  


// ---- misc

.img-responsive
	background-size cover
	background-repeat no-repeat
	background-position center center
.icon 
	margin 20px auto
.tabs li.active .tab__title span
	color #57818a
	
.margin-bottom-30
	margin-bottom 30px
.margin-top-30
	margin-top 30px
// ---- header

#header
	position absolute
	z-index 10
	background rgba(0,0,0,0.3)
	width 100%
	border-bottom 0.5px rgba(255,255,255,0.4) solid
	//height 120px
	
	#menu1
		padding 0
		div
			height inherit
			.bar__module
				a
					height inherit
					display block
			.menu-horizontal
				top 0
				font-size 16px			
				a
					color #fff
					opacity 1
					&:hover
						opacity 0.5
.logo.logo-light
	max-height 120px
	top 0

// ---- footer

#footer
	background-color #525252


// ---- Partials
#home-login
	background #57818A
	padding 20px 0 30px 0
	position absolute
	bottom 0
	z-index 10
	width 100%
	h1, h2, h3, h4, h5, h6
		margin 0
		color #fff


#blog-slider
	.slide-image
		height 300px !important
		


// ---- Home page
#home-hero
	min-height 100vh
.hamburger-toggle > i	
	color #fff
	line-height 100px

#icon-nav
	i
		margin 20px auto
	.btn
		max-width 200px
		margin 0 auto


#steeve
	.text-content
		padding 10vh
		height 50vh

// ---- media queries

@media (max-width: 992px) //tablet or small desktop
	#menu1
		background #57818a
		
		.float-right
			float none
		.menu-horizontal a
			color #fff
			padding 10px 5px
		.bar__module
			margin-bottom 0px
	#steeve
		.text-content
			padding 25px;

@media (max-width:768px) //mobile
	.logo.logo-light
		max-height 100px	
		margin-bottom 20px	
	#home-hero-content
		margin-top 120px
	#home-login
		input
			margin 0 0 20px 0
	#header 
		//height 100px
		.bar
			padding 0
