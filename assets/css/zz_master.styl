@media (max-width:768px) //mobile
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
		letter-spacing 5px
	h1
		font-size 4em
	h2
		font-size 3.5em
	h3
		font-size 3em
	h4
		font-size 2.5em
	h5
		font-size 2em
	h6
		font-size 1.5em
	.inline-block-xs
		width 49%
		display inline-block
		float none
	.col-right-full-height
		margin-top 30px
		position relative
		height 500px
	div[class*='col-'] > div[class*='col-']
		padding 0
	#footer
		.logo
			margin-top 50px

	#menu1
		.megamenu-subhead
			padding 0
		[class*='hr-']:after, [class*='hr-']:before
			width 100%
		.menu-horizontal
			>li
				margin 0
				&:hover
					background unset
					//color $white
					>span, >a
						color $gray !important
		.dropdown__content
				padding 0 !important
				border-radius 0px !important
		.menu-vertical
			li
				padding 10px 25px
				margin 0
				&:not(.separate)::after
					padding 10px 0 0 0
				&:hover
					background unset
					color $gray
					>span, >a
						color $gray !important
@media (max-height: 900px)
	#home-hero, #hero-cover
		min-height 100vh
@media (max-height: 730px)
	#hero-cover
		padding 9em 0 1em 0
