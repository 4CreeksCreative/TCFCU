.col-center
	float none
	margin 0 auto

// ---- Colors

.bg--gray
	background $gray4
.bg--blue
	background $blue
.bg--green
	background $green
.color--white
	color $white
.color--blue
	color $blue
.color--green
	color $green
a
	transition 0.2s
	color $blue
	&:hover,&:active
		transition 0.2s
		color $blueHover
.overlay-green[data-overlay]:before
	background $green
.overlay-blue[data-overlay]:before
	background $blue
// ---- header

#menu1

	padding 0px
	.menu-horizontal
		top 0
		>li
			margin 0
			>span, >a
				padding 25px
				display block
			&:not(.separate)::after
				padding 10px 0 0 0
			&:hover
				background $blue
				//color $white
				>span, >a
					color $white !important
	.dropdown__trigger::after
		display none
	.dropdown__content
			padding 0 !important
			border-radius 0px !important
	.menu-vertical
		padding-left 25px
		li

			a
				display block
				padding 5px 0px
				margin 0
				&.color--white
					color $white
				&:not(.separate)::after
					padding 10px 0 0 0
				&:hover
					//background $blue
					color $blue
					>span, >a
						color $white !important
	.logo
		max-height 100% !important
		top 0
		bottom 0
		margin auto
		position absolute
	.megamenu
		.col-sm-12
			padding 0px !important
		div[class*='col-']
			padding 25px 10px
#menu2
	padding 0 25px
	.logo
		max-height 100% !important
		top 0
		bottom 0
		margin auto
		position absolute





// ---- Home page

#our-services
	.col-sm-3
		padding 0 5% 25px 5%
		img
			padding 0 35px






// ---- Tables

table
	border $blue 4px solid
	font-size 1.2em
	text-align left
	thead
		tr
			th
				text-align center
				background-color $blue
				color $white
	tbody
		tr:nth-child(even)
			background-color rgba(0,0,0,.04) !important



// ---- Loans
#loan-nav
	.loan-type
		overflow hidden
		.background-image-holder
			transition 0.5s ease-in-out
		&:hover
			.background-image-holder
				transition 0.5s ease-in-out
				transform scale(1.1)


// ---- Masonry
.masonry
	.masonry__item
		margin-bottom 0



// ---- Partials
#home-login
	//background #57818A
	padding 20px 0 30px 0
	position absolute
	bottom 0
	z-index 10
	width 100%
	h1, h2, h3, h4, h5, h6
		margin 0
		color $white


#blog-slider
	.slide-image
		height 300px !important
	li
		list-style-type none



// ---- Home page
#home-hero, #hero-cover
	min-height 80vh
.hamburger-toggle > i
	color $blue
	//line-height 100px

#icon-nav
	i
		margin 20px auto
		color $navy
		font-size 3em
	.btn
		max-width 200px
		margin 0 auto


#steeve
	.text-content
		padding 10vh
		height 50vh

