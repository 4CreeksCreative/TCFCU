@import 'zy_settings'

//normalize-css()
//base()

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
	font-family $futura
	color $gray
	//text-transform uppercase
	margin-bottom 10px !important
	letter-spacing 0px
	font-weight 400


h1
	font-size 9.5em
	text-transform uppercase
	letter-spacing 5px
h2
	font-size 5em
	letter-spacing -2px
	font-weight 500
h3
	font-size 4em
h4
	font-size 3em
h5
	font-size 2.5em
	font-weight 600
	line-height 1.0em
h6
	font-size 1.5em



p, span, input, select, textarea
	font-family $futura
	color $gray
	font-size 1.6em
	line-height 1.6em
input
	font-size 1em
a:hover
	text-decoration none !important
::selection
	background $blue /* WebKit/Blink Browsers */
	color $white

::-moz-selection
	background: $blue /* Gecko Browsers */
	color $white

*[class*='hr-'][class*='-after']::after, *[class*='hr-'][class*='-before']::before
	height 5px
	content ""
	display block
	width 75%
	margin 15px 0
[class*='hr-green']::after, [class*='hr-green']::before
	background-color $green
[class*='hr-blue']::after, [class*='hr-blue']::before
	background-color $blue
[class*='hr-white']::after, [class*='hr-white']::before
	background-color $white


.col-right-full-height
	position absolute
	right 0
	top 0
	height 100%


.megamenu-subhead
	padding-left 25px

// ---- misc
section
	padding-top 50px
	padding-bottom 40px

.btn
	border-radius 999px
	span
		font-size 1em !important
		text-transform uppercase
		letter-spacing 2px
		font-family $futura
		font-weight	600

	&.btn-blue
		border 4px $white solid !important
		background $blue !important
		margin-top	25px
		margin-bottom 25px
		span
			color $white !important
		&:hover
			background $white !important
			border 4px $blue solid !important
			span
				color $blue !important

	&.btn-green
		border 4px $white solid !important
		background $green !important
		span
			color $white !important
		&:hover
			border 4px $green solid !important
			background $white !important
			span
				color $green !important
	&.btn-white
		background $white
		border 4px $transparent solid !important
		span
			color $blue !important
		&:hover
			background $transparent
			border 4px $white solid !important
			span
				color $white !important
