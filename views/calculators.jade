extends /layout

block content
	section.cover.height-50.imagebg.parallax.text-center(data-overlay="5")
		//- background image
		div.background-image-holder(style="background-image: url(/img/header/loans-credit-cards.jpg); background-position:center bottom; opacity: 1;") 
			//-background image for smaller devices
			img.attachment-full.size-full(width="1600" height="1067" src="/img/header/loans-credit-cards.jpg" alt="" srcset="/img/header/loans-credit-cards.jpg 1600w, /img/header/loans-credit-cards.jpg 300w, /img/header/loans-credit-cards.jpg 768w, /img/header/loans-credit-cards.jpg 1024w" sizes="(max-width: 1600px) 100vw, 1600px")
		div#hero-content.container.pos-vertical-center
			//-div.row.text-center
				div.col-sm-12
					h1 Credit Cards
	//-section
		div.container
			div.row
				div.col-md-12.text-center
					a.btn.btn-blue.type--uppercase(href="/loans")
						i.icon.icon--xs.fa.fa-arrow-left.color--blue(style="margin-right:20px;")
						span.btn__text Back to Loans

	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue Calculators
	section
		div.container

			div.row
				div.col-md-12
					h5.color--blue Budget Calculator
					p.
						Need some help putting together a budget? We've got you covered.
						
				div.col-md-12
					a.btn.btn-blue(href="https://www.quicken.com/budget-calculator" target="_blank")
						span.btn__text Budget Calculator
	section
		div.container

			div.row
				div.col-md-12
					h5.color--blue Home Loan Calculator
					p.
						How much of a mortgage can you afford? What other fees should I budget for? Let us help you figure it out.
						
				div.col-md-12
					a.btn.btn-blue(href="https://host.visualcalc.com/calcs/calhost.jsp" target="_blank")
						span.btn__text Home Loan Calculator

	section
		div.container

			div.row
				div.col-md-12
					h5.color--blue Auto Loan Calculator
					p.
						Not sure how much of a car payment you can afford? Let us help.
						
				div.col-md-12
					a.btn.btn-blue(href="https://host.visualcalc.com/calcs/calhost.jsp" target="_blank")
						span.btn__text Auto Loan Calculator

	section
		div.container

			div.row
				div.col-md-12
					h5.color--blue Retirement Calculator
					p.
						Don't want to work for the rest of your life? We'll help you plan for a secure tomorrow.
						
				div.col-md-12
					a.btn.btn-blue(href="https://host.visualcalc.com/calcs/calhost.jsp" target="_blank")
						span.btn__text Retirement Calculator
			
	section
