extends ../layout

block content
	section#blog-hero.cover.height-80.imagebg.parallax.text-center(data-overlay="5")
		//- background image
		div.background-image-holder(style="background: url(#{post.featured_image}); opacity: 1;") 
			//-background image for smaller devices
			img.attachment-full.size-full(width="1600" height="1067" src="#{post.featured_image}" alt="" srcset="#{post.featured_image} 1600w, #{post.featured_image} 300w, #{post.featured_image} 768w, #{post.featured_image} 1024w" sizes="(max-width: 1600px) 100vw, 1600px")
		div#blog-hero-content.container.pos-vertical-center
			div.row
				div.col-sm-12
					//-h1.text-center= post.title
			div.vc_empty_space(style="height: 32px")
				span.vc_empty_space_inner
			div.wpb_text_column.wpb_content_element
				div.wpb_wrapper

	//- h1= post.title
	//- img(src="#{post.featured_image}")
	
	section#blog-content
		div.container
			div.row
				div.col-lg-12
					h1.text-center= post.title
					!= post.content

	
	

