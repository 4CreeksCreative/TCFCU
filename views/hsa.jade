extends /layout

block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if contentful.hsa[0].headerPosition != undefined
			.background-image-holder(class="#{contentful.hsa[0].headerPosition}")
				if contentful.hsa[0].headerImage != undefined
					img(src="#{asset(contentful.hsa[0].headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if contentful.hsa[0].headerImage != undefined
					img(src="#{asset(contentful.hsa[0].headerImage)}" alt="header image")
				else
					img(src="/img/header/hsa.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= contentful.hsa[0].pageTitle
	section
		.container
			if contentful.hsa[0].subPageSections != undefined
				for item in contentful.hsa[0].subPageSections
					.row.mb--2
						.col-sm-12
							if item.fields.subhead != undefined
								h5.color--blue= item.fields.subhead
							if item.fields.body != undefined
								.md!= md(item.fields.body)
