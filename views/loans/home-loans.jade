extends /layout

block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if subPages.loansMortgage.headerPosition != undefined
			.background-image-holder(class="#{subPages.loansMortgage.headerPosition}")
				if subPages.loansMortgage.headerImage != undefined
					img(src="#{asset(subPages.loansMortgage.headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if subPages.loansMortgage.headerImage != undefined
					img(src="#{asset(subPages.loansMortgage.headerImage)}" alt="header image")
				else
					img(src="/img/header/loansMortgage.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= subPages.loansMortgage.pageTitle
	section
		.container
			if subPages.loansMortgage.subPageSections != undefined
				for item in subPages.loansMortgage.subPageSections
					if item.sys.contentType.sys.id === 'textSection'
						.row.mb--2
							.col-sm-12
								if item.fields.subhead != undefined
									h5.color--blue= item.fields.subhead
								if item.fields.body != undefined
									.md!= md(item.fields.body)
