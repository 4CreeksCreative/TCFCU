extends /layout

block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if subPages.loansPersonal.headerPosition != undefined
			.background-image-holder(class="#{subPages.loansPersonal.headerPosition}")
				if subPages.loansPersonal.headerImage != undefined
					img(src="#{asset(subPages.loansPersonal.headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if subPages.loansPersonal.headerImage != undefined
					img(src="#{asset(subPages.loansPersonal.headerImage)}" alt="header image")
				else
					img(src="/img/header/loansPersonal.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= subPages.loansPersonal.pageTitle
	section
		.container
			if subPages.loansPersonal.subPageSections != undefined
				for item in subPages.loansPersonal.subPageSections
					if item.sys.contentType.sys.id === 'textSection'
						- var sectionID = item.fields.sectionId == undefined ? '' : item.fields.sectionId
						.row.mb--2(id="#{item.fields.sectionId}")
							.col-sm-12
								if item.fields.subhead != undefined
									h5.color--blue= item.fields.subhead
								if item.fields.body != undefined
									.md!= md(item.fields.body)
