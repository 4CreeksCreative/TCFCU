extends /layout

block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if subPages.loansAuto.headerPosition != undefined
			.background-image-holder(class="#{subPages.loansAuto.headerPosition}")
				if subPages.loansAuto.headerImage != undefined
					img(src="#{asset(subPages.loansAuto.headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if subPages.loansAuto.headerImage != undefined
					img(src="#{asset(subPages.loansAuto.headerImage)}" alt="header image")
				else
					img(src="/img/header/loansAuto.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= subPages.loansAuto.pageTitle
					//-p.
						Purchase or Refinance a new or pre-owned auto or recreational loan (travel trailers, motorhomes, motorcycles, boats, ATV).
