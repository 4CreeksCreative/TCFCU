block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if subPages.protect.headerPosition != undefined
			.background-image-holder(class="#{subPages.protect.headerPosition}")
				if subPages.protect.headerImage != undefined
					img(src="#{asset(subPages.protect.headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if subPages.protect.headerImage != undefined
					img(src="#{asset(subPages.protect.headerImage)}" alt="header image")
				else
					img(src="/img/header/protect.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= subPages.protect.pageTitle
