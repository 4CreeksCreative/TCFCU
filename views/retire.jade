extends /layout

block content
	section#hero.cover.height-60.imagebg.parallax.text-center
		if subPages.retire.headerPosition != undefined
			.background-image-holder(class="#{subPages.retire.headerPosition}")
				if subPages.retire.headerImage != undefined
					img(src="#{asset(subPages.retire.headerImage)}" alt="header image")
		else
			.background-image-holder.bg-cc
				if subPages.retire.headerImage != undefined
					img(src="#{asset(subPages.retire.headerImage)}" alt="header image")
				else
					img(src="/img/header/retire.jpg" alt="header image")
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue= subPages.retire.pageTitle
	section
		.container
			if subPages.retire.pageTitle != undefined
				for item in subPages.retire.subPageSections
					if item.sys.contentType.sys.id === 'textSection'
						.row.mb--2
							.col-sm-12
								if item.fields.subhead != undefined
									h5.color--blue= item.fields.subhead
								if item.fields.body != undefined
									.md!= md(item.fields.body)
